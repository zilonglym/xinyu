body,button,input,select,textarea{font:12px/1.5 tahoma,arial,\5b8b\4f53}
/* general */
.prepend-top {
	margin-top:1.5em;
}

/* header */
#header {
	/* border-bottom: 2px solid #658A16; */
}

#header h1 {
	font-size: 14px;
	color: #000000;
}

#header h1 small {
	color: #000000;
}

/* leftbar */
#leftbar h1 {
    border-bottom: 1px solid #EEEEEE;
    color: #000000;
    font-size: 16px;
    font-weight: bold;
    text-align: left;
    text-transform: uppercase;
}

.comment-act{
	display:none;
}

.submenu a {
    background-image: url("../images/background/submenua.gif");
    background-position: right center;
    background-repeat: no-repeat;
    border-bottom: 1px dashed #EEEEEE;
    text-decoration: none;
    display: block;
    padding: 5px 0 5px 5px;
    width: 100%;
}

.submenu a:hover,.submenu .active  {
    background-color: #EEEEEE;
    background-image: url("../images/background/submenua_hover.jpg");
    background-repeat: repeat-y;
}

/*main*/
#main h1 {
    border-bottom: 1px solid #EEEEEE;
    color: #4A8C04;
    font-size: 20px;
    font-weight: bold;
    text-transform: uppercase;
}

#main h2 {
    color: #728C40;
    font-size: 16px;
    font-weight: normal;
    text-transform: uppercase;
}

#main h1,h2 {
	margin-bottom: 9px;
}
/* footer */
#footer {
	margin-top: 15px;
	padding: 15px 0px 0px 0px;
	font-size: 95%;
	text-align: center;
	border-top: 2px solid #658A16;
}

#footer a {color: #999;}

/* 提示 */
.hint {
     width: 200px;
     /*bottom:0;*/
     padding: 10px;
     left: 40%;
     top: 40%;
     position: fixed;
}