	<select id="getWmsConsignOrderItemById" parameterType="string"
		resultMap="WmsConsignOrderItemResult">
		SELECT T.*
		FROM T_xinyu_WmsConsignOrderItem T where T.FID=#{id}
	</select>
	
	<select id="findStoreOrderItemList" parameterType="map"
		resultType="map">
		SELECT i.id as "itemId",i.code as "itemCode",i.title as "itemName",i.sku as "itemSku",i.barCode as "barCode",t.num as "num",u.username as "shopName",i.userid as "userId"
		FROM store.sc_ship_order_detail t 
		inner join store.sc_item i on t.item_id = i.id
		inner join store.sc_user u on i.userid = u.id
		where 1=1
		<if test="orderId!=null and orderId!=''">
			and t.order_id = #{orderId}
		</if>
	</select>
	
	<select id="getWmsConsignOrderItemByList" parameterType="map"
		resultMap="WmsConsignOrderItemResult">
		SELECT T.*
		FROM T_xinyu_WmsConsignOrderItem T 
		<where>
		    1=1
		    <if test="orderId!=null and orderId!=''">
		        and FKorderID=#{orderId}
		    </if>
		</where>
		order by forderitemid
	</select>
	
	<insert id="insertWmsConsignOrderItem" parameterType="com.xinyu.model.trade.WmsConsignOrderItem">
		insert into
		T_xinyu_WmsConsignOrderItem(FitemBatchQuantity,FitemOutQuantity,FID,FKorderID,ForderItemId,FKitemID,ForderSourceCode,FsubSourceCode,FuserId,Fusername,FownerUserId,FownerUserName,FitemName,FitemCode,FbatchCode,FproduceDate,FdueDate,FpurchaseOrderCode,FinventoryType,FitemQuantity,FactualPrice,FitemPrice,FtaxRate,FdiscountAmount,FitemVersion,FbatchRemark,Fremark)
		VALUES(#{itemBatchQuantity},#{itemOutQuantity},#{id},#{order.id,jdbcType=VARCHAR},#{orderItemId,jdbcType=VARCHAR},#{item.id,jdbcType=VARCHAR},#{orderSourceCode,jdbcType=VARCHAR},#{subSourceCode,jdbcType=VARCHAR},#{userId,jdbcType=VARCHAR},#{username,jdbcType=VARCHAR},#{ownerUserId,jdbcType=VARCHAR},#{ownerUserName,jdbcType=VARCHAR},#{itemName,jdbcType=VARCHAR},#{itemCode,jdbcType=VARCHAR},#{batchCode,jdbcType=VARCHAR},#{produceDate},#{dueDate},#{purchaseOrderCode,jdbcType=VARCHAR},#{inventoryType,jdbcType=INTEGER},#{itemQuantity,jdbcType=VARCHAR},#{actualPrice,jdbcType=VARCHAR},#{itemPrice,jdbcType=VARCHAR},#{taxRate,jdbcType=VARCHAR},#{discountAmount,jdbcType=VARCHAR},#{itemVersion,jdbcType=INTEGER},#{batchRemark,jdbcType=VARCHAR},#{remark,jdbcType=VARCHAR})
	</insert>

