			<if test="ownerUserName!=null and ownerUserName!=''">FownerUserName=#{ownerUserName},</if>
			<if test="itemName!=null and itemName!=''">FitemName=#{itemName},</if>
			<if test="itemCode!=null and itemCode!=''">FitemCode=#{itemCode},</if>
